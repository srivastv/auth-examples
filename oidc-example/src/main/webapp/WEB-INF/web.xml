<web-app>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.gsp</welcome-file>
    </welcome-file-list>
    <servlet>
    <servlet-name>LoginAction</servlet-name>
        <servlet-class>com.websecurityjournal.auth.oidc.LoginAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAction</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>CallBackAction</servlet-name>
        <servlet-class>com.websecurityjournal.auth.oidc.CallBackAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CallBackAction</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>
</web-app>
